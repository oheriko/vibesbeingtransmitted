{
	"name": "vibesbeingtransmitted",
	"version": "0.1.0",
	"type": "module",
	"scripts": {
		"dev": "bun run --hot src/server/index.ts",
		"build": "bun build ./src/client/index.tsx --outdir ./dist/client --minify && cp src/client/index.html dist/client/ && cp -r public/* dist/client/",
		"start": "bun run src/server/index.ts",
		"test": "bun test",
		"lint": "biome check .",
		"format": "biome format --write .",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"infra:setup": "bun run infra/setup.ts",
		"infra:deploy": "bun run infra/deploy.ts",
		"infra:ssh": "bun run infra/ssh.ts",
		"infra:status": "bun run infra/status.ts",
		"infra:logs": "bun run infra/logs.ts",
		"infra:destroy": "bun run infra/destroy.ts",
		"infra:diagnose": "bun run infra/diagnose.ts",
		"build:extension": "cd extension && LD_PRELOAD=/usr/lib/x86_64-linux-gnu/libstdc++.so.6 bunx wxt build && bunx wxt build --browser firefox && cd .output/chrome-mv3 && zip -r ../../../public/vibes-extension.zip . && cd ../firefox-mv2 && zip -r ../../../public/vibes-extension-firefox.zip ."
	},
	"dependencies": {
		"better-auth": "^1.4.18",
		"drizzle-orm": "^0.38.3",
		"hono": "^4.6.16",
		"react": "^19.0.0",
		"react-dom": "^19.0.0"
	},
	"devDependencies": {
		"@libsql/client": "^0.17.0",
		"@types/bun": "latest",
		"@types/react": "^19.0.0",
		"@types/react-dom": "^19.0.0",
		"drizzle-kit": "^0.30.1"
	}
}
